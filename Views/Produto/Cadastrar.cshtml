<div class="container mt-5">
    <form>
        <h2>Cadastro de Produtos</h2>

        <div class="mb-1">
            <label class="form-label">Foto</label>
            <input class="form-class shadow-none" type="file" name="foto" />
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input class="form-control shadow-none" type="text" />
        </div>

        <div class="mb-1">
            <label class="form-label">Marca:</label>
            <input class="form-control shadow-none" type="text" />
        </div>

        <div class="mb-1">
            <label class="form-label">Valor:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any"/>
        </div>

        <div class="mb-1">
            <label class="form-label">Quantidade:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any"/>
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <select class="form-select" asp-items="@(new SelectList(ViewBag.Categorias,"Id","Nome"))" type="text"></select>
        </div>

        <div class="d-flex mt-3 justify-content-center">
            <button type="submit" class="btn btn-success w-25 mx-1"><i class="bi bi-plus-circle"></i></button>
            <a class="btn btn-info w-25 " asp-action="Index"><i class="bi bi-arrow-left-circle"></i></a>
        </div>
    </form>
</div>
