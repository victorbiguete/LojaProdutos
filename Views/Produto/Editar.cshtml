@using LojaProdutos.DTOs.Produto;
@model EditarProdutoDTO

<div class="container mt-5">
    <form asp-action="Editar" asp-controller="Produto" method="post" enctype="multipart/form-data">
        <h2>Edição de Produto - @Model.Nome</h2>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Foto" />

        <div class="mb-1">
            <label class="form-label">Foto</label>
            <input class="form-class shadow-none" type="file" name="foto" />
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <input class="form-control shadow-none" type="text" asp-for="Nome" />
            <span asp-validation-for="Nome"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Marca:</label>
            <input class="form-control shadow-none" type="text" asp-for="Marca" />
            <span asp-validation-for="Marca"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Valor:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" asp-for="Valor" />
            <span asp-validation-for="Valor"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Quantidade:</label>
            <input class="form-control shadow-none" type="number" min="1" step="any" asp-for="QuantidadeEstoque" />
            <span asp-validation-for="QuantidadeEstoque"></span>
        </div>

        <div class="mb-1">
            <label class="form-label">Nome:</label>
            <select class="form-select" asp-items="@(new SelectList(ViewBag.Categorias,"Id","Nome",Model.CategoriaModelId))" type="text" asp-for="CategoriaModelId"></select>
            <span asp-validation-for="CategoriaModelId"></span>
        </div>

        <div class="d-flex mt-3 justify-content-center">
            <button type="submit" class="btn btn-success w-25 mx-1"><i class="bi bi-plus-circle"></i> Editar</button>
            <a class="btn btn-info w-25 " asp-action="Index"><i class="bi bi-arrow-left-circle"></i> Voltar</a>
        </div>
    </form>
</div>